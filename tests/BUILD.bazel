# Test infrastructure for Lyra
#
# Suite-based test framework using YAML test specs in sv_features/

load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

cc_library(
    name = "test_framework",
    srcs = glob(["framework/*.cpp"]),
    hdrs = glob(["framework/*.hpp"]),
    deps = [
        "//:interp",
        "//:llvm_backend",
        "//:lowering",
        "@googletest//:gtest",
        "@slang",
        "@yaml-cpp",
    ],
)

# MIR development suite - core tests for incremental MIR development
cc_test(
    name = "mir_dev_tests",
    srcs = ["main.cpp"],
    args = ["--suite=mir_dev"],
    data = [
        "suites.yaml",
    ] + glob(["sv_features/**/*.yaml"]),
    deps = [
        ":test_framework",
        "@googletest//:gtest",
    ],
)

# JIT development suite - tests for in-process ORC JIT backend (used in PR CI)
cc_test(
    name = "jit_dev_tests",
    srcs = ["main.cpp"],
    args = ["--suite=jit_dev"],
    data = [
        "suites.yaml",
    ] + glob(["sv_features/**/*.yaml"]),
    deps = [
        ":test_framework",
        "@googletest//:gtest",
    ],
)

# JIT two-state suite - regression tests for --two-state mode
cc_test(
    name = "jit_two_state_tests",
    srcs = ["main.cpp"],
    args = ["--suite=jit_two_state"],
    data = [
        "suites.yaml",
    ] + glob(["sv_features/**/*.yaml"]),
    deps = [
        ":test_framework",
        "@googletest//:gtest",
    ],
)

# LLI development suite - out-of-process LLI execution (for debugging/comparison)
cc_test(
    name = "lli_dev_tests",
    srcs = ["main.cpp"],
    args = ["--suite=lli_dev"],
    data = [
        "suites.yaml",
        "//:liblyra_runtime.so",
    ] + glob(["sv_features/**/*.yaml"]),
    deps = [
        ":test_framework",
        "@googletest//:gtest",
    ],
)
