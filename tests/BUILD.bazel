# Test infrastructure for Lyra
#
# Suite-based test framework using YAML test specs in sv_features/

load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

cc_library(
    name = "test_framework",
    srcs = glob(["framework/*.cpp"]),
    hdrs = glob(["framework/*.hpp"]),
    deps = [
        "//:interp",
        "//:llvm_backend",
        "//:lowering",
        "@googletest//:gtest",
        "@slang",
        "@yaml-cpp",
    ],
)

# MIR development suite - core tests for incremental MIR development
cc_test(
    name = "mir_dev_tests",
    srcs = ["main.cpp"],
    args = ["--suite=mir_dev"],
    data = [
        "suites.yaml",
    ] + glob(["sv_features/**/*.yaml"]),
    deps = [
        ":test_framework",
        "@googletest//:gtest",
    ],
)

# LLVM development suite - tests for LLVM JIT backend
cc_test(
    name = "llvm_dev_tests",
    srcs = ["main.cpp"],
    args = ["--suite=llvm_dev"],
    data = [
        "suites.yaml",
        "//:liblyra_runtime.so",
    ] + glob(["sv_features/**/*.yaml"]),
    deps = [
        ":test_framework",
        "@googletest//:gtest",
    ],
)
